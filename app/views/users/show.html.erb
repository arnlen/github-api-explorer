<h1><%= @user.username %></h1>
<p>
  <%= pluralize(@user.followers, "follower") %> - <%= pluralize(@repositories.count, "repository") %>
</p>

<h2>Repositories</h2>

<ul>
  <% @repositories.each do |repository| %>
    <ol>
      <%= repository.name %> (<%= pluralize(repository.stars, "star") %>) - created on <%= repository.creation_date %>
    </ol>
  <% end %>
</ul>